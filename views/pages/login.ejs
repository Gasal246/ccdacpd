<body>
	
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
				<form class="login100-form validate-form" id="login-form">
					<span class="login100-form-title p-b-26">
						<img src="/assets/images/icons/logo.png" width="110" alt=""> login
					</span>
					<span class="login100-form-title p-b-48">
						<img src="/assets/images/icons/ccda.jpg" style="width: 65px;border-radius: 10px;box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;" alt="">
					</span>

					<div class="wrap-input100 validate-input" data-validate = "Valid email is: a@b.c">
						<input class="input100" type="text" name="email">
						<span class="focus-input100" data-placeholder="Email"></span>
					</div>

					<div class="wrap-input100 validate-input" data-validate="Enter password">
						<span class="btn-show-pass">
							<i class="zmdi zmdi-eye"></i>
						</span>
						<input class="input100" type="password" name="password">
						<span class="focus-input100" data-placeholder="Password"></span>
					</div>

					<a href="#" class="text-info">forget password ?</a>

                    <br><span class="text-danger" style="font-size: 14px;" id="error-text"></span>
					<div class="container-login100-form-btn">
						<div class="wrap-login100-form-btn">
							<div class="login100-form-bgbtn"></div>
							<button class="login100-form-btn" type="submit">
								Login
							</button>
						</div>
					</div>

					<div class="text-center p-t-115">
						<span class="txt1">
							Root admin only allowed to add users
						</span>
					</div>
				</form>
			</div>
		</div>
	</div>
	

	<div id="dropDownSelect1"></div>

    <script>
        document.getElementById('login-form').addEventListener('submit', (e)=>{
            e.preventDefault();
            $.ajax({
                url: '/login',
                type: 'POST',
                data: $('#login-form').serialize(),
                success: (response)=>{
                    if(response.status){
                        location.href = '/'
                    }else{
                        console.log(response.err);
                        let count = 5
                        function counter(){
                            document.getElementById('error-text').innerHTML = response.err + "Try again in " + count + " s"
                            count--
                            setTimeout(counter, 1000)
                        }
                        counter()
                        let t = setTimeout(()=>{
                            location.reload()
                        }, 5000)
                    }
                }
            })
        })
    </script>
	
